<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="575.0" maxWidth="690.0" minHeight="575.0" minWidth="690.0" prefHeight="575.0" prefWidth="690.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bookinfo.HelloController">
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
               <MenuItem mnemonicParsing="false" onAction="#handleLoadDBFromJsonMenuItem" text="Load DB From JSON" />
           <MenuItem mnemonicParsing="false" onAction="#handleCloseMenuItem" text="Close" />
         </items>
       </Menu>
     </menus>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </MenuBar>
  <Button alignment="CENTER" onAction="#handleAddGradeToDB" text="Add Grade to DB">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></Button>
   <TextField fx:id="textFieldAddNewScore" maxHeight="26.0" maxWidth="170.0" minHeight="26.0" minWidth="170.0" prefHeight="26.0" prefWidth="170.0" promptText="Score">
      <VBox.margin>
         <Insets left="500.0" right="20.0" top="-46.0" />
      </VBox.margin>
   </TextField>
   <TextField fx:id="textFieldAddNewCategory" maxHeight="26.0" maxWidth="170.0" minHeight="26.0" minWidth="170.0" prefHeight="26.0" prefWidth="170.0" promptText="Category">
      <VBox.margin>
         <Insets left="320.0" right="210.0" top="-46.0" />
      </VBox.margin>
   </TextField>
   <TextField fx:id="textFieldAddNewName" maxWidth="170.0" minHeight="26.0" minWidth="170.0" prefHeight="26.0" prefWidth="170.0" promptText="Name">
      <VBox.margin>
         <Insets left="140.0" right="390.0" top="-46.0" />
      </VBox.margin></TextField>
   <Button mnemonicParsing="false" onAction="#handleDisplayGradesFromDB" text="Display Grades From DB">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin>
   </Button>
   <ListView fx:id="listViewBooks" maxHeight="425.0" maxWidth="650.0" minHeight="425.0" minWidth="650.0" prefHeight="425.0" prefWidth="660.0">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </ListView>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</VBox>
